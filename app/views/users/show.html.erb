<div class="row">
	<div class="col-xs-3">

<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<h2>User info</h2>
<%= render 'users/profile', user: @user %>
<!--同コントローラーのviewで表示ならusersは省略可 -->

<h2>New book</h2>
<%= render 'books/newform', book: @book %>
</div>
<div class="col-xs-9">
<h2>Books</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= link_to user_path(@user) do %>
				<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no-image-mini.jpg", size:'40x40' %>
				<% end %>
			</td>
			<td><%= link_to book.title, book_path(book) , class: "book_#{book.id}" %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
<!--books一覧 -->

